# Recurly Configuration
# Obtenha suas chaves em: https://app.recurly.com/go/integrations/api_keys
# Chave privada da API (para backend)
RECURLY_API_KEY=SUA_CHAVE_PRIVADA_RECURLY_AQUI

# Chave pública (para frontend - Recurly.js)
# Configure também no arquivo .env.local ou variáveis de ambiente do Vercel
VITE_RECURLY_PUBLIC_KEY=SUA_CHAVE_PUBLICA_RECURLY_AQUI

# Webhook Secret (para validar webhooks do Recurly)
RECURLY_WEBHOOK_SECRET=SEU_WEBHOOK_SECRET_AQUI

# Subdomain do Recurly (ex: facely.recurly.com)
RECURLY_SUBDOMAIN=SEU_SUBDOMAIN_AQUI

